<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:alpha=".9">

    <TextView
        android:id="@+id/marketingtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/expedia_blue"
        android:contentDescription="Expedia Sale"
        android:paddingBottom="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:text="Expedia Sale"
        android:textColor="@color/expedia_yellow"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:background="@color/expedia_yellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hotel_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/hotelview" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/hotel_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:contentDescription="Default Promotion Header"
                    android:text="Hotel Description"
                    android:textColor="@color/expedia_blue"
                    android:textSize="15dp" />

                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/expedia_blue"
                    android:contentDescription="Percent"
                    android:padding="3dp"
                    android:text="50 %Off"
                    android:textColor="@color/white"
                    android:textSize="15dp" />


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:src="@drawable/expedialogowithtext" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="150dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crossoutprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:text="Crossout"
                    android:textSize="20dp"
                    android:textColor="@color/expedia_blue"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:text="total"
                    android:textSize="25dp"
                    android:textColor="@color/expedia_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noOfNightsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Flight + 3 Nights"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:background="@color/expedia_blue"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>